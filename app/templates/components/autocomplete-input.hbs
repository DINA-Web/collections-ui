
{{input
    type="text"
    class="form-control input-sm"
    value=value

    key-down="onKeyDown"
    focus-in="onFocus"
    disabled=(readonly selected)
    placeholder=(t (if placeholder placeholder 'definitions.type-to-search'))

    autocomplete=false
}}

    <!--disabled=(readonly selected)-->

{{#if selected}}
    <i
        class='autocomplete-input__clear-button glyphicon glyphicon-remove-circle clickable'
        {{action 'clearSelection'}}
    ></i>
{{/if}}

{{yield (hash
    inline=(
        component 'autocomplete-input/inline'
        limit=limit
        totalRows=totalRows
        isResponseSubset=isResponseSubset
        visibleSubset=isDropdownVisible
    )
    dropdown=(
        component 'autocomplete-input/dropdown'
        isDropdownVisible=isDropdownVisible
        isResponseSubset=isResponseSubset
        data=previewData
        itemClick=(action 'onItemClick')
        displayField=displayField
        historyItems=historyItems
        displayHistory=displayHistory
        isLoading=isLoading
    )
)}}
