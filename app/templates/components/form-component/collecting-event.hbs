{{#field-group title=title identifier=title as |fieldGroup|}}
    {{#fieldGroup.content}}
        {{#unless isCreating}}
            {{partial 'partial/collecting-event/select'}}
        {{else}}
            {{partial 'partial/collecting-event/create'}}
            {{attachments-list attachments=model.collectingEvent.attachments}}
        {{/unless}}
    {{/fieldGroup.content}}
    {{#if isCreating}}
        {{#fieldGroup.toolbar}}
            {{#dropdown-button
                label='definitions.add-comment'
                iconClass='glyphicon-comment'
                class='pull-right' as |db|
            }}
                {{#db.item click=(action "addComment")}}
                    {{t 'definitions.comment-field'}}
                {{/db.item}}
                {{#db.item click=(action "addComment" "verbatim")}}
                    {{t 'definitions.verbatim-field'}}
                {{/db.item}}
            {{/dropdown-button}}
        {{/fieldGroup.toolbar}}
    {{/if}}
{{/field-group}}
