{{#field-group
    title=title identifier=title counter=model.preparations.length
    as |fieldGroup|
}}
    {{#fieldGroup.content}}
        {{partial partialType}}
    {{/fieldGroup.content}}
    
    {{#unless configuration.disableAdd}}
        {{#fieldGroup.toolbar}}
            <a class="btn btn-primary btn-xs" {{action "addPreparation"}}>
                <i class="glyphicon glyphicon-plus"></i> 
                {{t 'fields.labels.preparation.add'}}
            </a>
            {{#dropdown-button
                label='definitions.add-comment'
                iconClass='glyphicon-comment'
                class='pull-right' as |db|
            }}
                {{#db.item click=(action "addComment")}}
                    {{t 'definitions.comment-field'}}
                {{/db.item}}
                {{#db.item click=(action "addComment" "verbatim")}}
                    {{t 'definitions.verbatim-field'}}
                {{/db.item}}
            {{/dropdown-button}}
        {{/fieldGroup.toolbar}}
    {{/unless}}
{{/field-group}}
