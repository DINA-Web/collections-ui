<div class="dwcm-single-determination__header">
    <div class="pull-left dwcm-single-determination__current">
        {{input type='checkbox' checked=model.isCurrent}}
        {{#if displayIndex}}
            <span class="index">{{displayIndex}}.</span>
        {{/if}}
    </div>
    <i
        class="clickable glyphicon glyphicon-remove-circle" {{action "remove"}}
    ></i>
</div>
<div class="row">
    <div class="col-xs-6">
        {{
            dwcm-autocomplete-textfield
            label="definitions.name"

            storeName='taxon'

            displayField='fullName'
            filterField='fullName'
            itemSelected=(action 'setTaxonomy')
        }}
    </div>
    <div class="col-xs-3">
        {{dwcm-textfield
            label='fields.labels.determination.confidence' value=model.confidence
        }}
    </div>
    <div class="col-xs-3">
        {{dwcm-textfield
            label='fields.labels.determination.method' value=model.method
        }}
    </div>
</div>
<div class="row">
    <div class="col-xs-6">
        {{
            dwcm-autocomplete-textfield
            label="fields.labels.determination.determiner"

            storeName='agent'

            displayField='fullName'
            filterField='lastName'
            itemSelected=(action 'setDeterminer')
        }}
    </div>
    <div class="col-md-4 col-xs-6">
        <div class="form-group form-group-sm">
            <label>
                {{t 'fields.labels.determination.determined-date'}}:
            </label>
            {{#bs-datetimepicker
                updateDate=(action (mut model.determinedDate))
                format='YYYY-MM-DD'
                forceDateOutput=true
                maxDate=(now)
            }}
                {{
                    input disabled=disabled class="form-control"
                    name="Date" placeholder=(t 'fields.placeholder.date-format')
                }}
            {{/bs-datetimepicker}}
        </div>
    </div>
    <div class="col-md-2 col-xs-6">
        {{dwcm-textfield
            label='fields.labels.determination.type-status'
            value=model.typeStatus
        }}
    </div>
</div>
