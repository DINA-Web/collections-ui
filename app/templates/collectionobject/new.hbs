<div class="container dwcm-collectionobject-new__body {{if validationError 'validation-visible' ''}}">
    <div class="page-header">
        <h2>{{t 'collectionobject.new.title' name=entityType}}:</h2>
    </div>
    <ul class="nav nav-pills">
        {{#each groups as |group|}}
            <li>
                <a class="clickable" {{action "navigationClick" group}}>{{t group}}</a>
            </li>
        {{/each}}
    </ul>
    {{#if validationError}}
        <div class="alert alert-danger" role="alert">
            <strong>{{t 'main.validation-message.save'}}</strong>
            <ul>
                {{#each model.validations.messages as |message|}}
                    <li>{{message}}</li>
                {{/each}}
            </ul>
        </div>
    {{/if}}
    {{#each groups as |group|}}
        {{component group model=model}}
    {{/each}}
</div>

<footer class="footer">
    <div class="container">
        <div class="btn-toolbar">
            <a
                class="btn btn-success"
                {{action 'submitForm'}}
            >
                {{t 'collectionobject.new.toolbar.save'}}
            </a>
            <div class="btn-group">
                <a class="btn btn-default">{{t 'collectionobject.new.toolbar.duplicate'}}</a>
                <a class="btn btn-default">{{t 'collectionobject.new.toolbar.print'}}</a>
            </div>
            <a class="btn btn-danger pull-right">{{t 'collectionobject.new.toolbar.close'}}</a>
        </div>
    </div>
</footer>