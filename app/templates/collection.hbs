<div class="container dwcm-collectionobject-view">
    <div class="page-header">
        <h1>
            {{t 'collection.list.header'}}
        </h1>
    </div>
    <div class='panel panel-default'>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12 col-md-12 col-lg-12">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>{{t 'fields.labels.collection'}}</th>
                                <th>{{t 'fields.labels.collection_code'}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each model as |collection|}}
                                {{#link-to 'collection.view' collection tagName='tr' class='clickable'}}
                                    <td>
                                        {{collection.id}}
                                    </td>
                                    <td>
                                        {{collection.collectionName}}
                                    </td>
                                    <td>
                                        {{collection.code}}
                                    </td>
                                {{/link-to}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>