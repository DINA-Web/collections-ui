                        {{/each}}
                    </div>
                </div>-->
                <div class="col-xs-12 col-md-12 col-lg-12">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>{{t 'fields.labels.collection'}}</th>
                                <th>{{t 'fields.labels.collection_code'}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each model as |collection|}}
                                {{#link-to 'collection.view' collection tagName='tr' class='clickable'}}
                                    <td>
                                        {{collection.id}}
                                    </td>
                                    <td>
                                        {{collection.collectionName}}
                                    </td>
                                    <td>
                                        {{collection.code}}
                                    </td>
                                {{/link-to}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <ul class="pager">
            {{#if previousVisible}}
                <li class="previous">
                    <a href="#"><span aria-hidden="true">&larr;</span> {{t 'definitions.previous'}}</a>
                </li>
            {{/if}}
            <li class="next">
                <a href="#" {{action "nextPage"}}>{{t 'definitions.next'}} <span aria-hidden="true">&rarr;</span></a>
            </li>
        </ul>
    </nav>
</div>

